<div class="card">
  <div class="mb-2">
    <%= link_to "← 목록으로 돌아가기", posts_path, class: "btn btn-secondary" %>
  </div>

  <article class="card">
    <header class="mb-3">
      <h1 class="page-title"><%= @post.title %></h1>
      <div class="post-meta">
        <span>작성자: <%= @post.author %></span>
        <span>작성일: <%= @post.created_at.strftime("%Y년 %m월 %d일 %H:%M") %></span>
      </div>
    </header>

    <div class="post-content">
      <div class="post-summary">
        <%= simple_format(@post.content) %>
      </div>
    </div>

    <footer class="mt-3 pt-3 border-top">
      <div class="post-actions">
        <%= link_to "수정", edit_post_path(@post), class: "edit" %>
        <%= link_to "삭제", post_path(@post), 
            method: :delete, 
            data: { confirm: "정말로 이 포스트를 삭제하시겠습니까?" },
            class: "delete" %>
      </div>
      <div class="post-meta">
        <span>마지막 수정: <%= @post.updated_at.strftime("%Y년 %m월 %d일 %H:%M") %></span>
      </div>
    </footer>
  </article>
</div> 